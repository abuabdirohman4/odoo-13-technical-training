<data>
    <!-- tech.session action window -->
    <record id="tech_session_action" model="ir.actions.act_window">
        <field name="name">Sesi Kursus</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tech.session</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Buat Sesi Batu...
            </p>
            <p>
                <!-- More details about what a user can do with this object will be OK -->
            </p>
        </field>
    </record>

    <!-- tech.session tree view -->
    <record id="tech_session_view_tree" model="ir.ui.view">
        <field name="name">tech.session.view.tree</field>
        <field name="model">tech.session</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Add your fields here -->
                <field name="name"/>
                <field name="session_date"/>
                <field name="course_id"/>
                <field name="instructor_id"/>
                <field name="session_date"/>
                <field name="description"/>
                <field name="min_attendee"/>
            </tree>
        </field>
    </record>

    <!-- tech.session form view -->
    <record id="tech_session_view_form" model="ir.ui.view">
        <field name="name">tech.session.view.form</field>
        <field name="model">tech.session</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="course_id"/>
                            <field name="instructor_id"/>
                        </group>
                        <group>
                            <field name="session_date"/>
                            <field name="min_attendee"/>
                        </group>
                    </group>
                    <notebook>
                        <page string='Deskripsi' name="desc">
                            <field name="description"/>
                        </page>
                        <page string="Data Peserta" name="data_peserta">
                            <field name="attendee_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="student_id"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- tech.session search view -->
    <record id="tech_session_view_search" model="ir.ui.view">
        <field name="name">tech.session.view.search</field>
        <field name="model">tech.session</field>
        <field name="arch" type="xml">
            <search string="Search Description">
                <field name="name"/>
                <field name="course_id"/>
                <field name="instructor_id"/>
                <field name="description"/>

                <!-- <filter name="filter_nonactive" string="Nonaktif" domain="[('active', '=', False)]"/> -->
                <group expand="0" string="Group By">
                    <filter string="Kursus" name="group_kursus" domain="[]" context="{'group_by': 'course_id'}"/>
                    <filter string="Pengajar" name="group_pengajars" domain="[]" context="{'group_by': 'instructor_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="tech_session_menu_act" name="Sesi Kursus" parent="tech_academy_menu_root" action="tech_session_action" sequence="9"/>
</data>